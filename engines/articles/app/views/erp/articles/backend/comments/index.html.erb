<% content_for :title do %>
    <%= t('.comments') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-folder"></i> <%= t('.comments') %>
<% end %>

<%= erp_datalist(
    url: erp_articles.list_backend_comments_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_articles_comments.name'
        },
        {
            text: t('.message'), name: 'erp_articles_comments.message'
        },
        {
            text: t('.article'),
            name: 'erp_articles_articles.name',
            select: {
                name: 'erp_articles_articles.id',
                data_url: erp_articles.dataselect_backend_articles_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-eye-slash"></i> '+t('.archive'),
            url: erp_articles.archive_all_backend_comments_path,
            data_method: 'PUT',
            data_confirm: t('.archive_confirm')
        },
        {
            text: '<i class="fa fa-eye"></i> '+t('.unarchive'),
            url: erp_articles.unarchive_all_backend_comments_path,
            data_method: 'PUT',
            data_confirm: t('.unarchive_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_articles.delete_all_backend_comments_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('archived'), name: 'show_archived', value: true, checked: false
        },
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.article'), name: 'article', value: true, checked: true
        },
        {
            text: t('.message'), name: 'message', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_articles_comments.created_at', sort_direction: 'desc' }
) %>    