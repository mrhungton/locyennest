<% content_for :title do %>
    <%= @price_list.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_products.backend_price_lists_path %>">
    <i class="fa fa-usd"></i> <%= t('.price_lists') %>
    </a> / <%= @price_list.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_price_list_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @price_list.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', price_list: @price_list %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>