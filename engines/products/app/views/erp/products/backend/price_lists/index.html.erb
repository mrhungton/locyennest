<% content_for :title do %>
    <%= t('.price_lists') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-usd"></i> <%= t('.price_lists') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_price_list_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_products.list_backend_price_lists_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_products_price_lists.name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-toggle-on"></i> '+t('.enable'),
            url: erp_products.enable_all_backend_price_lists_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-toggle-off"></i> '+t('.disable'),
            url: erp_products.disable_all_backend_price_lists_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_products.delete_all_backend_price_lists_path,
            data_method: 'DELETE',
            data_confirm: t('delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.inactive'), name: 'show_active', value: false, checked: false
        },
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.valid_datetime'), name: 'valid_datetime', value: true, checked: true
        },
        {
            text: t('.warehouses'), name: 'warehouses', value: true, checked: false
        },
        {
            text: t('.users'), name: 'users', value: true, checked: false
        },
        {
            text: t('.contact_groups'), name: 'contact_groups', value: true, checked: false
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_products_price_lists.created_at', sort_direction: 'desc' }
) %>