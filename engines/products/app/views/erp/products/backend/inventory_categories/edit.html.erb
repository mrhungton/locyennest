<% content_for :title do %>
    <%= @inventory_category.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_products.backend_inventory_categories_path %>">
    <i class="fa fa-th-list"></i> <%= t('.inventory_categories') %>
    </a> / <%= @inventory_category.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_inventory_category_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @inventory_category.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', inventory_category: @inventory_category %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>