<input type="hidden" name="product[products_gifts_attributes][<%= uid %>][id]" value="<%= products_gift.id %>">
<input type="hidden" name="product[products_gifts_attributes][<%= uid %>][gift_id]" value="<%= products_gift.gift_id %>">
<input type="hidden" name="product[products_gifts_attributes][<%= uid %>][_destroy]" value="">

<td><%= products_gift.gift_code %></td>
<td><%= products_gift.gift_name %></td>
<td>
    <%= erp_form_control("text", {
        name: 'product[products_gifts_attributes][' + uid + '][quantity]',
        value: products_gift.quantity,
        text: products_gift.quantity
    }) %>
</td>
<td>
    <%= products_gift.price %>
</td>
<td>
    <%= erp_form_control("addableform_remove_button", {
        is_nested_form: true
    }) %>
</td>