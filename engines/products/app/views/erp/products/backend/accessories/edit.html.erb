<% content_for :title do %>
    <%= @accessory.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_products.backend_accessories_path %>">
    <i class="fa fa-th-list"></i> <%= t('.accessories') %>
    </a> / <%= @accessory.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_accessory_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @accessory.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', accessory: @accessory %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>