<%= form_for([erp_products, :backend, properties_value]) do |f| %>
    <%= erp_form_control("text", {
        name: 'properties_value[value]',
        value: properties_value.value,
        label: t('.value'),
        required: true,
        errors: properties_value.errors.full_messages_for(:value)
    }) %>
    <%= erp_form_control('checkbox', {
        name: 'properties_value[is_show_website]',
        id: 'properties_value_is_show_website',
        value: properties_value.is_show_website,
        not_selected_value: 'false',
        options: [{value: 'true', text: t('.is_show_website')}],
        help: t('.help_is_show_website')
    }) %>
    <%= erp_form_control("dataselect", {
        name: 'properties_value[property_id]',
        value: properties_value.property_id,
        text: properties_value.property_name,
        placeholder: t('.choose_property'),
        label: t('.property'),
        url: erp_products.dataselect_backend_properties_path(format: 'json'),
        create: {
            url: erp_products.new_backend_property_path,
            title: t('.create_property'),
            container_selector: '.new_property',
            input_selector: 'input[name="properties_value[name]"]'
        },
        required: true,
        errors: properties_value.errors.full_messages_for(:property_id)
    }) %>
    <hr>
    <%= erp_component('button/save', {
        text: t('submit')
    }) %>
    <%= erp_component('button/cancel', {
        text: t('cancel'),
        href: erp_products.backend_properties_path
    }) %>
<% end %>
