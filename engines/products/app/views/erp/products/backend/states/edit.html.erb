<% content_for :title do %>
    <%= @state.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_products.backend_states_path %>">
    <i class="fa fa-tags"></i> <%= t('.states') %>
    </a> / <%= @state.name %>
<% end %>

<% content_for :page_toolbar do %>
    <% if can? :create, @state %>
        <%= erp_component('button/create', {
            text: t('.create'),
            href: erp_products.new_backend_state_path,
            class: 'btn-noborder'
        }) %>
    <% end %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @state.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', state: @state %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>