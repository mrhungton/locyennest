<% content_for :title do %>
    <%= @unit.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_products.backend_units_path %>">
    <i class="fa fa-gg"></i> <%= t('.units') %>
    </a> / <%= @unit.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_unit_path,
        class: 'btn-sm'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-6">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', unit: @unit %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>