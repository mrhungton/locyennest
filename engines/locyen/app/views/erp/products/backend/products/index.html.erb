<% content_for :title do %>
    <%= t('.products') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> <%= t('.products') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_products.new_backend_product_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_products.list_backend_products_path,
    sortable: true,
    keyword: true,
    actions: [
        {
            text: '<i class="fa fa-ban"></i> '+t('archive'),
            url: erp_products.archive_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.archive_confirm')
        },
        {
            text: '<i class="fa fa-check"></i> '+t('unarchive'),
            url: erp_products.unarchive_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.unarchive_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-check-square-o"></i> '+t('.check_is_published'),
            url: erp_products.check_is_published_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.check_is_published_confirm')
        },
        {
            text: '<i class="fa fa-square-o"></i> '+t('.uncheck_is_published'),
            url: erp_products.uncheck_is_published_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.uncheck_is_published_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-check-square-o"></i> '+t('.check_is_bestseller'),
            url: erp_products.check_is_bestseller_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.check_is_bestseller_confirm')
        },
        {
            text: '<i class="fa fa-square-o"></i> '+t('.uncheck_is_bestseller'),
            url: erp_products.uncheck_is_bestseller_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.uncheck_is_bestseller_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-plus"></i> '+t('.check_is_new'),
            url: erp_products.check_is_new_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.check_is_new_confirm')
        },
        {
            text: '<i class="fa fa-remove"></i> '+t('.uncheck_is_new'),
            url: erp_products.uncheck_is_new_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.uncheck_is_new_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-plus"></i> '+t('.check_is_call'),
            url: erp_products.check_is_call_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.check_is_call_confirm')
        },
        {
            text: '<i class="fa fa-remove"></i> '+t('.uncheck_is_call'),
            url: erp_products.uncheck_is_call_all_backend_products_path,
            data_method: 'PUT',
            data_confirm: t('.uncheck_is_call_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_products.delete_all_backend_products_path,
            data_method: 'DELETE',
            data_confirm: t('.delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.is_published'), name: 'erp_products_products.published', value: true, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.is_new'), name: 'erp_products_products.is_new', value: true, checked: false
        },
        {
            text: t('.is_bestseller'), name: 'erp_products_products.is_bestseller', value: true, checked: false
        },
        {
            text: t('.is_call'), name: 'erp_products_products.is_call', value: true, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.archived'), name: 'show_archived', value: true, checked: false
        },
    ],
    columns: [
        {
            text: t('.code'), name: 'code', value: true, checked: false
        },
        {
            text: t('.brand'), name: 'brand', value: true, checked: false
        },
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.category'), name: 'category', value: true, checked: true
        },
        {
            text: t('.price'), name: 'price', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_products_products.created_at', sort_direction: 'desc' }
) %>
