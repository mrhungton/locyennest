    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAN2VnsyHJW93xpLFJNVfXJ8c4sLGl9qEU"></script>
    <script>
        function initialize() {
            var mapOptions = {
                center: new google.maps.LatLng(10.772760, 106.696361),
                zoom: 15,
                scrollwheel: false,
            };

            var map = new google.maps.Map(document.getElementById('googleMap'),
