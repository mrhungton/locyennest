                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="line-bg-gradient to-left"></div>

<div class="shop-area ptb-50">
    <div class="container">
        <div class="row">
            <!-- product-vew area start -->
            <div class="col-xl-12 col-lg-12">
                <div class="tab-area shop-tab-area">
                    <div class="tab-menu-area border-bottom mb-30">
                        <div class="row">
                            <div class="col-md-7 col-sm-6 col-xs-12">
                                <div class="shop-taitle">
                                    <h2 class="head-logo text-uppercase"><%= @menu.name %></h2>
                                </div>
                            </div>
                            <div class=" col-md-5 col-sm-6 hidden-xs">
                                <!-- <div class="woocommerce-ordering text-right">
                                    <strong>Sắp xếp </strong>
                                    <select name="orderby">
                                        <option value="name" selected="selected">Tên (A-Z)</option>
                                        <option value="price">Giá (Thấp-Cao)</option>
                                    </select>
                                    <a href="#"><i class="fa fa-arrow-up"></i></a>
                                </div> -->
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <% if @products.empty? %>
                        <div class="col-xs-12 col-md-12">
                            <p>Không tìm thấy sản phẩm ở mục này.</p>
                        </div>
                        <% else %>
                        <% @products.each do |product| %>
                        <% product_images = product.product_images %>
                        <div class="col-xl-4 col-md-6 col-sm-6">
                            <div class="single-product mb-30 wow zoomIn" data-wow-delay="0.3s">
                                <div class="product-img">
                                    <%= link_to image_tag(
                                        product_images.first.image_url.large,
                                        title: product.product_name,
                                        alt: product.product_name),
                                        product_link(product),
                                        title: product.product_name
                                    %>
                                    <div class="product-info-overlay-area clear pt-35 flex-direction-column">
                                        <%= add_to_cart_button(product) %>
                                        <%= link_to '<i class="fa fa-eye"></i> xem chi tiết'.html_safe, product_link(product), class: 'locyen-btn ml-2' %>
                                    </div>
                                </div>
                                <div class="product-item-details text-center">
                                    <div class="product-name-review tab-product-name-review">
                                        <div class="product-name mt-20 ">
                                            <strong>
                                                <%= link_to product.name, product_link(product) %>
                                            </strong>
                                        </div>
                                        <div class="product-review">
                                            <!-- price -->
                                            <% if product.is_call? %>
                                            <span class="price">Giá liên hệ</span>
                                            <% else %>
                                            <span class="price">
                                                <%= format_price(product.product_price) %>
                                                <% if product.is_deal? %>
                                                <span class="old-price">
                                                    <%= format_price(product.price) %>
                                                </span>
                                                <span class="percent deal">-<%= product.deal_percent %>%</span>
                                                <% end %>
                                            </span>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% end %>
                        <% end %>
                    </div>
                </div>

