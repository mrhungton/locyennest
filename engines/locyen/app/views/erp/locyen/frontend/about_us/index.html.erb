<!-- about-area start -->
<div class="breadcrumbs-area bg-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="woocommerce-breadcrumb mtb-15">
                    <div class="menu">
                        <ul>
                            <li><a href="<%= erp_locyen.root_path %>"><i class="fa fa-home"></i></a></li>
                            <li class="active"><a href="javascript:void(0);">Giới thiệu</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="line-bg-gradient to-left"></div>
<div class="about-main-area">
    <div class="about-title-area ptb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="about-heading wow fadeInUp" data-wow-delay="0.3s">
                        <h1 class="text-uppercase">Giới thiệu</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% @abouts.each_with_index do |about,index| %>
        <div class="about-area about-bg">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <% if index % 2 == 0 %>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="about-img mb-30 wow fadeInLeft" data-wow-delay="0.5s">
                                <div class="about-img-3D">
                                    <img src="<%= about.image %>" alt="<%= about.name %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="about-content text-justify mb-30 wow fadeInRight" data-wow-delay="0.5s">
                                <div class="about-title mb-20">
                                    <h2><%= about.name %></h2>
                                </div>
                                <%= about.content.html_safe %>
                            </div>
                        </div>
                    <% else %>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="about-content text-justify mb-30 wow fadeInLeft" data-wow-delay="0.5s">
        
                                <div class="about-title mt-30 mb-20">
                                    <h2><%= about.name %></h2>
                                </div>
                                <%= about.content.html_safe %>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="about-img mb-30 wow fadeInRight" data-wow-delay="0.5s">
                                <div class="about-img-3D">
                                    <img src="<%= about.image %>" alt="<%= about.name %>">
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>
<!-- about-area end -->