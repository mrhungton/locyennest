<!-- blog-area start -->
<div class="breadcrumbs-area bg-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="woocommerce-breadcrumb mtb-15">
                    <div class="menu">
                        <ul>
                            <li><a href="<%= erp_locyen.root_path %>"><i class="fa fa-home"></i></a></li>
                            <li class="active"><a href="javascript:void(0);">Góc chia sẻ</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="line-bg-gradient to-left"></div>
<div class="blog-area ptb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog-area">
                    <div class="row">
                        <% @blogs.each do |blog| %>
                            <div class="col-md-6 col-sm-6">
                                <div class="blog-wrap text-center mb-35">
                                    <div class="blog-img fix">
                                        <a href="<%= article_link(blog) %>">
                                            <img src="<%= blog.image.medium %>" alt="<%= blog.name %>" />
                                        </a>
                                    </div>
                                    <div class="blog-content">
                                        <div class="blog-meta d-flex justify-content-between">
                                            <span>
                                                <i class="fa fa-user" aria-hidden="true"></i> Lộc Yến 
                                            </span>
                                            <span 
                                                title="<%= blog.created_at.strftime('%b %d, %Y - %H:%M:%S') %>">
                                                <i class="fa fa-clock-o" aria-hidden="true"></i> <%= relative_time(blog.created_at) %>
                                            </span>
                                        </div>
                                        <div class="blog-info">
                                            <h3>
                                                <a href="<%= article_link(blog) %>"><%= blog.name %></a>
                                            </h3>
                                            <p><%= short_text(blog.content, 20) %></p>
                                            <div class="readmore-btn">
                                                <a href="<%= article_link(blog) %>">Xem thêm <i class="fa fa-angle-double-right"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        <!-- <div class="col-md-12">
                            <div class="woocommerce-pagination-area ptb-15 mb-30 bg-4">
                                <div class="woocommerce-pagination text-center">
                                    <ul>
                                        <li class="active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <%= render "erp/locyen/frontend/modules/blog/sidebar" %>
            </div>
        </div>
    </div>
</div>
<!-- footer area start -->