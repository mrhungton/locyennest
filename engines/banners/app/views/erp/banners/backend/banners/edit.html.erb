<% content_for :title do %>
    <%= @banner.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_banners.backend_banners_path %>">
    <i class="fa fa-picture-o"></i> <%= t('.banners') %>
    </a> / <%= @banner.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_banners.new_backend_banner_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @banner.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', banner: @banner %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>