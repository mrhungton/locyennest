<%= form_for([erp_areas, :backend, country]) do |f| %>    
    <%= erp_form_control("text", {
        name: 'country[name]',
        value: country.name,                   
        label: t('.name'),
        required: true,
        errors: country.errors.full_messages_for(:name)
    }) %>
    <%= erp_form_control("text", {
        name: 'country[code]',
        value: country.code,                   
        label: t('.code'),
        required: true,
        errors: country.errors.full_messages_for(:code)
    }) %>
    <hr>
    <%= erp_component('button/save', {
        text: t('submit')
    }) %>
    <%= erp_component('button/cancel', {
        text: t('cancel'),
        href: erp_areas.backend_countries_path
    }) %>
<% end %>