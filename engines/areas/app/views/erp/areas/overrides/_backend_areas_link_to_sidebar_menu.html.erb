<% if Erp::Core.available?("online_store") %>
<li class="nav-item <%= "active open" if ["erp/areas/backend/countries", "erp/areas/backend/states"].include?(params[:controller]) %>">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="fa fa-globe"></i>
        <span class="title"><%= t('.area') %></span>
        <% if ["erp/areas/backend/countries", "erp/areas/backend/states"].include?(params[:controller]) %>
            <span class="selected"></span>
            <span class="arrow open"></span>
        <% else %>
            <span class="arrow"></span>
        <% end %>
    </a>
    <ul class="sub-menu">
        <li class="nav-item">
            <a href="<%= erp_areas.backend_states_path %>" class="nav-link">
                <span class="title"><%= t('.states') %></span>
            </a>
        </li>
        <li class="nav-item">
            <a href="<%= erp_areas.backend_countries_path %>" class="nav-link">
                <span class="title"><%= t('.countries') %></span>
            </a>
        </li>
    </ul>
</li>
<% end %>